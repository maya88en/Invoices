<div class="col-xs-12">
<%= simple_form_for(@invoice) do |f| %>
  <div id="invoice-wrap">
    <%= f.error_notification %>
    <div class="row">
      <div class="col-xs-12">
        <h3 class="page-header">INVOICE<small class="pull-right"></h3>
      </div><!-- /.col -->
    </div>

    <div class="row invoice-info">
      <div class="col-xs-4 invoice-col">
        From
        <address>
          <%= f.input_field :company, class: "form-control form-control-lg" %>
          <input class="form-control form-control-lg"   placeholder="address line 1" />
          <input class="form-control form-control-lg"   placeholder="address line 2" />
          <input class="form-control form-control-lg"   placeholder="phone number" />
        </address>
      </div><!-- /.col -->
      <div class="col-xs-4 invoice-col">
        To
        <address>
          <%= f.input_field :contragent, class: "form-control form-control-lg" %>
          <input class="form-control form-control-lg"   placeholder="address line 1" />
          <input class="form-control form-control-lg"   placeholder="address line 2" />
          <input class="form-control form-control-lg"   placeholder="phone number" />
        </address>
      </div><!-- /.col -->
      <div class="col-xs-4 invoice-col form-control-lg">
        <form class="form-horizontal form-control-lg">


        <div class="form-group ">
        <div class="col-xs-4 form-control-lg"><label>Invoice #</label></div>
        <div class="col-xs-8 invoice_num form-control-lg"></div>
      </div>
      <div class="col-xs-12"></div>
          <div class="form-group">
            <div class="col-xs-4"><%= f.label :date, required: false %></div>
            <div class="col-xs-8"><%= f.input_field :date, class: "form-control datepicker", as: :string %></div>
          </div>

      <div class="col-xs-12"></div>
          <div class="form-group">
            <div class="col-xs-4"><%= f.label :currency, required: false %></div>
            <div class="col-xs-8"><%= f.input_field :currency, class: "form-control form-control-lg" %></div>
          </div>

      <div class="col-xs-12"></div>
          <div class="form-group">
          <div class="col-xs-4"><%= f.label :amount, required: false %></div>
          <div class="col-xs-8"><%= f.input_field :amount, class: "form-control form-control-lg" %></div>
          </div>
        </form>
      </div><!-- /.col -->
    </div><!-- /.row -->

    <div class="row">
        <div class="col-xs-12 pull-left">
          <%= f.button :submit, 'Submit Payment', class: 'btn btn-warning' %>    
        </div>
    </div>
<% end %>